{
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "Bash(npm test:*)",
      "Bash(npm run test:coverage:*)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(*.env)",
      "Read(secrets.json)",
      "Read(*.key)",
      "Read(*.pem)",
      "Read(*.p12)",
      "Read(*.keystore)",
      "Read(google-services.json)",
      "Read(GoogleService-Info.plist)",
      "Read(**/*secret*)",
      "Read(**/*credential*)",
      "Read(**/*private*)"
    ]
  }
}